{{#if @model}}
  <div class="p-4 bg-gray-100 rounded-lg" {{did-update this.parseCalendarPeriod @model}}>
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <div class="flex flex-row items-center">
          <div class="flex-none">
            {{svg-jar "heroicons-md-calendar" class="h-5 w-5 text-gray-500"}}
          </div>
          <div class="ml-3 text-lg font-semibold text-gray-600">
            {{capitalize @title}}
          </div>
          <Util::SaveStatus
            @model={{@model}}
            @task={{@saveTask}}
            @isInvalid={{not this.calendarPeriod.isValid}}
            @isDeleting={{this.delete.isRunning}}
            class="ml-2" />
        </div>
        <div>
          {{#if @onDelete}}
            <button type="button"
              {{on "click" (perform this.delete)}}
              class="inline-flex items-center text-sm text-gray-700 underline lg:no-underline hover:underline focus:outline-none focus:ring-2 focus:ring-red-200">
              {{svg-jar "heroicons-sm-ban" class="-ml-0.5 mr-1 h-4 w-4 text-gray-400"}}
              Wis {{@title}}
            </button>
          {{/if}}
        </div>
      </div>
      <div>
        <div class="grid grid-cols-2 gap-y-4 gap-x-4">
          <div class="col-span-2">
            <InputField::Date
              @label="Datum"
              @value={{@model.date}}
              @onChange={{queue (fn (mut @model.date)) (perform @saveTask)}}
              class="mt-1" />
          </div>
          {{#if @model.date}}
            <div class="col-span-2">
              <InputField::CalendarPeriodSelect
                @label="Periode"
                @value={{this.calendarPeriod.period}}
                @required={{true}}
                @onSelectionChange={{this.changePeriod}}
                class="mt-1" />
            </div>
            {{#if this.calendarPeriod.requiresSingleTime}}
              <div>
                <label for="period-from" class="block text-sm font-medium text-gray-700">
                  Tijdstip
                </label>
                <Input
                  id="period-from"
                  @type="text"
                  @value={{this.calendarPeriod.fromHour}}
                  class="mt-1 shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "focusout" this.saveCalendarPeriodChange}} />
              </div>
            {{/if}}
            {{#if this.calendarPeriod.requiresTimeRange}}
              <div>
                <label for="period-from" class="block text-sm font-medium text-gray-700">
                  Van
                </label>
                <Input
                  id="period-from"
                  @type="text"
                  @value={{this.calendarPeriod.fromHour}}
                  class="mt-1 shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "focusout" this.saveCalendarPeriodChange}} />
              </div>
              <div>
                <label for="period-to" class="block text-sm font-medium text-gray-700">
                  Tot
                </label>
                <Input
                  id="period-to"
                  @type="text"
                  @value={{this.calendarPeriod.untilHour}}
                  class="mt-1 shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "focusout" this.saveCalendarPeriodChange}} />
              </div>
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{else}}
  {{#unless @onDelete}}
    <div class="p-4 bg-gray-100 rounded-lg">
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <div class="flex flex-row items-center">
            <div class="flex-none">
              {{svg-jar "heroicons-md-calendar" class="h-5 w-5 text-gray-500"}}
            </div>
            <div class="ml-3 text-lg font-semibold text-gray-600">
              {{capitalize @title}}
            </div>
          </div>
        </div>
        <div class="pl-8 italic text-gray-400">
          Bezoek niet correct aangemaakt. Vink 'Bezoek nodig' opnieuw aan.
        </div>
      </div>
    </div>
  {{/unless}}
{{/if}}
