<Rlv::Modal @onClose={{@onClose}}>
  <:body>
  <div class="sm:flex sm:items-start">
    <div class="mx-auto flex-none flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
      {{svg-jar "alert-fill" class="h-6 w-6 text-red-600 fill-current"}}
    </div>
    <div class="mt-3 grow text-center sm:mt-0 sm:ml-4 sm:text-left">
      <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
        Dossier afsluiten
      </h3>
      <div class="mt-2 space-y-4">
        <p class="text-sm text-gray-500">
          Bent u zeker dat u dit dossier wil afsluiten?
        </p>
        <div>
          <label for="cancellation-reason" class="block text-sm text-gray-500">
            Reden van afsluiten
          </label>
          <Textarea
            id="cancellation-reason"
            @value={{this.cancellationReason}}
            class="mt-1 shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
            rows="5"
            {{on "focusout" this.setCancellationReason}} />
        </div>
      </div>
    </div>
  </div>
  </:body>
  <:footer>
  <Rlv::Button
    @label="Afsluiten"
    @disabled={{not this.isValid}}
    @skin="primary"
    class="ml-2"
    {{on "click" (fn @onConfirm this.cancellationReason)}} />
  </:footer>
</Rlv::Modal>