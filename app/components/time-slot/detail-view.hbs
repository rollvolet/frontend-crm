<div class="p-4 bg-gray-100 rounded-lg
  {{if this.isUnscheduled (concat "relative border-2 border-dashed " this.borderColor)}}">
  {{#if this.isUnscheduled}}
    <div class={{concat this.bgColor " absolute -bottom-3 -right-3 rounded shadow px-2 py-1 text-white text-xs"}}>
      {{#if this.isOverdue}}
        Niet ingepland
      {{else}}
        Nog niet ingepland
      {{/if}}
    </div>
  {{/if}}
  <div class="space-y-3">
    <div class="flex justify-between items-center">
      <div class="flex flex-row items-center">
        <div class="flex-none">
          {{svg-jar "calendar-event-line" class="h-5 w-5 text-gray-500 fill-current"}}
        </div>
        <div class="ml-3 text-lg font-semibold text-gray-600">
          {{capitalize @title}}
        </div>
      </div>
      <div>
        <Rlv::Button
          @label="Open agenda"
          @hideText={{true}}
          @icon="external-link-line"
          @skin="secondary-naked"
          @size="large"
          @route="main.calendar.visits"
          @query={{hash d=(format-date @date "yyyy-MM-dd")}}
          class="p-0" />
      </div>
    </div>
    <dl class="-ml-12 space-y-1 text-sm">
      <Util::DetailItem @label="Datum">
        <Fmt::Date @value={{@date}} />
      </Util::DetailItem>
      <Util::DetailItem @label="Periode">
        {{@period}}
      </Util::DetailItem>
      {{#unless this.isUnscheduled}}
        <Util::DetailItem @label="Agenda">
          Ingepland van
          <Fmt::DateTime @value={{@model.start}} @format="HH:mm" />
          tot
          <Fmt::DateTime @value={{@model.end}} @format="HH:mm" />
        </Util::DetailItem>
      {{/unless}}
    </dl>
  </div>
</div>
