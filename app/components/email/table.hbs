<div class="space-y-4">
  <div class="-my-2 overflow-x-auto">
    <div class="w-full py-2 align-middle inline-block">
      <table class="w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="pl-4 pr-2 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Email
            </th>
            <th class="pl-4 pr-2 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Memo
            </th>
            <th class="px-6 py-3 bg-gray-50">
              {{!-- Acties --}}
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {{#if this.loadData.isRunning}}
            <tr class="animate-pulse">
              <td class="py-2 px-4">
                <div class="h-8 w-18 bg-gray-300"></div>
              </td>
              <td class="py-2 px-4">
                <div class="h-8 w-20 bg-gray-300"></div>
              </td>
              <td>
              </td>
            </tr>
            <tr class="animate-pulse">
              <td class="py-2 px-4">
                <div class="h-8 w-14 bg-gray-300"></div>
              </td>
              <td class="py-2 px-4">
                <div class="h-8 w-16 bg-gray-300"></div>
              </td>
              <td>
              </td>
            </tr>
          {{else}}
            {{#each this.emails as |email|}}
              <Email::TableRow
                @model={{email}}
                @saveTask={{this.saveEmail}}
                @onDelete={{perform this.deleteEmail email}} />
            {{else}}
              <tr>
                <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">
                  Geen emailadressen
                </td>
              </tr>
            {{/each}}
          {{/if}}
        </tbody>
      </table>
      <Rlv::AddToListButton
        @label="Email toevoegen"
        @size="small"
        @onClick={{perform this.addEmail}} />
    </div>
  </div>
</div>