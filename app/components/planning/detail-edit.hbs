
<div class="p-4 bg-gray-100 rounded-lg">
  <div class="space-y-3">
    <div class="flex justify-between items-center">
      <div class="flex flex-row items-center">
        <div class="flex-none">
          {{svg-jar "heroicons-md-calendar" class="h-5 w-5 text-gray-500"}}
        </div>
        <div class="ml-3 text-lg font-semibold text-gray-600">
          Planning
        </div>
        <Util::SaveStatus @model={{@model}} @task={{@saveTask}} class="ml-2" />
      </div>
      <div>
        <button type="button"
          onClick={{this.removePlanning}}
        class="inline-flex items-center text-sm text-gray-700 underline lg:no-underline hover:underline focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
          {{svg-jar "heroicons-sm-ban" class="-ml-0.5 mr-1 h-4 w-4 text-gray-400"}}
          Wis planning
        </button>
      </div>
    </div>
    <div>
      <div class="grid grid-cols-2 gap-y-6 gap-x-4">
        <div class="col-span-2">
          <InputField::Date
            @label="Datum"
            @value={{@model.planningDate}}
            @onChange={{queue (fn (mut @model.planningDate)) (perform @saveTask)}} />
        </div>
      </div>
    </div>
  </div>
</div>
