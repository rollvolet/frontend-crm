<div class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    {{#if this.showModalContent}}
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        {{css-transition
            enterClass="opacity-0"
            enterActiveClass="ease-out duration-300"
            enterToClass="opacity-100"
            leaveClass="opacity-100"
            leaveActiveClass="ease-in duration-200"
            leaveToClass="opacity-0"}}
        aria-hidden="true"></div>
    {{/if}}

    {{!-- This element is to trick the browser into centering the modal contents. --}}
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    {{#if this.showModalContent}}
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:w-11/12 sm:p-6"
        {{css-transition
            enterClass="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            enterActiveClass="ease-out duration-300"
            enterToClass="opacity-100 translate-y-0 sm:scale-100"
            leaveClass="opacity-100 translate-y-0 sm:scale-100"
            leaveActiveClass="ease-in duration-200"
            leaveToClass="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"}}>
        <div class="hidden sm:block absolute top-0 right-0 pt-4 pr-4">
          <button type="button"
            onClick={{this.closeModal}}
          class="bg-white rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
            <span class="sr-only">Close</span>
            {{svg-jar "heroicons-md-x" class="h-6 w-6"}}
          </button>
        </div>
        <div class="space-y-4">
          <div class="flex justify-between items-start">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold font-display text-gray-900">
                BTW-attest opzoeken
              </h2>
            </div>
          </div>
          <div class="p-4 lg:px-6 space-y-4 lg:flex lg:items-start lg:space-x-12 lg:space-y-0 bg-gray-50 rounded">
            <div class="flex items-center">
              {{svg-jar "heroicons-md-search" class="flex-shrink-0 mr-2 h-4 w-4 text-gray-500"}}
              <h4 class="text-gray-700 text-sm uppercase tracking-wide">
                Zoeken
              </h4>
            </div>
            <div class="grid sm:grid-cols-5 lg:grid-cols-7 gap-4">
              <div class="lg:col-span-2 xl:col-span-1">
                <label for="dt-filter-invoice-number" class="block text-sm font-medium text-gray-700">
                 Factuurnr.
                </label>
                <Input
                  @id="dt-filter-invoice-number"
                  @type="text"
                  value={{this.filter.number}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "number")}} />
              </div>
              <div class="lg:col-span-2 xl:col-span-1">
                <label for="dt-filter-request-number" class="block text-sm font-medium text-gray-700">
                  AD
                </label>
                <Input
                  @id="dt-filter-request-number"
                  @type="text"
                  value={{this.filter.requestNumber}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "requestNumber")}} />
              </div>
              <div class="lg:col-span-2 xl:col-span-1">
                <label for="dt-filter-offer-number" class="block text-sm font-medium text-gray-700">
                  Offerte
                </label>
                <Input
                  @id="dt-filter-offer-number"
                  @type="text"
                  value={{this.filter.offerNumber}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "offerNumber")}} />
              </div>
              <div class="sm:col-span-2">
                <label for="dt-filter-reference" class="block text-sm font-medium text-gray-700">
                  Referentie
                </label>
                <Input
                  @id="dt-filter-reference"
                  @type="text"
                  value={{this.filter.reference}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "reference")}} />
              </div>
              <div class="sm:col-span-2">
                <InputField::FilterFlag @label="Zoeken in"
                  @value={{this.scope}}
                  @options={{array
                               (hash label="Facturen" value="invoice" id="invoice-option")
                               (hash label="Voorschotfact." value="deposit-invoice" id="deposit-invoice-option")
                           }}
                  @onChange={{this.setScope}} />
              </div>
              <div class="sm:col-span-2 sm:col-start-1">
                <label for="dt-filter-customer-name" class="block text-sm font-medium text-gray-700">
                  Klant
                </label>
                <Input
                  @id="dt-filter-customer-name"
                  @type="text"
                  value={{this.filter.cName}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "cName")}} />
              </div>
              <div class="sm:col-span-3 lg:col-span-2">
                <label for="dt-filter-customer-street" class="block text-sm font-medium text-gray-700">
                  Straat
                </label>
                <Input
                  @id="dt-filter-customer-street"
                  @type="text"
                  value={{this.filter.cStreet}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "cStreet")}} />
              </div>
              <div class="">
                <label for="dt-filter-customer-postal-code" class="block text-sm font-medium text-gray-700">
                  Postcode
                </label>
                <Input
                  @id="dt-filter-customer-postal-code"
                  @type="text"
                  value={{this.filter.cPostalCode}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "cPostalCode")}} />
              </div>
              <div class="sm:col-span-2">
                <label for="dt-filter-customer-city" class="block text-sm font-medium text-gray-700">
                  Gemeente
                </label>
                <Input
                  @id="dt-filter-customer-city"
                  @type="text"
                  value={{this.filter.cCity}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "cCity")}} />
              </div>
              <div class="sm:col-span-2 sm:col-start-1">
                <label for="dt-filter-building-name" class="block text-sm font-medium text-gray-700">
                  Gebouw
                </label>
                <Input
                  @id="dt-filter-building-name"
                  @type="text"
                  value={{this.filter.bName}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "bName")}} />
              </div>
              <div class="sm:col-span-3 lg:col-span-2">
                <label for="dt-filter-building-street" class="block text-sm font-medium text-gray-700">
                  Straat
                </label>
                <Input
                  @id="dt-filter-building-street"
                  @type="text"
                  value={{this.filter.bStreet}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "bStreet")}} />
              </div>
              <div class="">
                <label for="dt-filter-building-postal-code" class="block text-sm font-medium text-gray-700">
                  Postcode
                </label>
                <Input
                  @id="dt-filter-building-postal-code"
                  @type="text"
                  value={{this.filter.bPostalCode}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "bPostalCode")}} />
              </div>
              <div class="sm:col-span-2">
                <label for="dt-filter-building-city" class="block text-sm font-medium text-gray-700">
                  Gemeente
                </label>
                <Input
                  @id="dt-filter-building-city"
                  @type="text"
                  value={{this.filter.bCity}}
                  class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                  {{on "input" (perform this.debounceFilter "bCity")}} />
              </div>
            </div>
            <div class="flex-shrink-0">
              <button type="button"
                onClick={{this.resetFilters}}
        class="inline-flex items-center text-sm text-gray-700 underline lg:no-underline hover:underline focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
                {{svg-jar "heroicons-sm-filter" class="-ml-0.5 mr-2 h-4 w-4 text-gray-400"}}
                Wis filters
              </button>
            </div>
          </div>

          <div class="-my-2 overflow-x-auto">
            <div class="py-2 align-middle inline-block min-w-full">
              <div class="overflow-hidden border-b border-gray-200">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead>
                    <tr>
                      <DataTable::Th
                        @field="number"
                        @currentSort={{this.sort}}
                        @onUpdateSort={{this.setSort}}
                        class="pl-4 pr-2 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Nr
                      </DataTable::Th>
                      <DataTable::Th
                        @field="invoice-date"
                        @currentSort={{this.sort}}
                        @onUpdateSort={{this.setSort}}
                        class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Datum
                      </DataTable::Th>
                      <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Klant
                      </th>
                      <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Straat
                      </th>
                      <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        P.Code
                      </th>
                      <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Gemeente
                      </th>
                      <th class="px-6 py-3 bg-gray-50"></th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    {{#if this.search.isRunning}}
                      <tr class="animate-pulse">
                        <td class="py-2 px-4">
                          <div class="h-8 w-12 bg-gray-300"></div>
                        </td>
                        <td class="py-2 px-4">
                          <div class="h-8 w-12 bg-gray-300"></div>
                        </td>
                        <td class="py-2 px-4">
                          <div class="h-8 w-16 bg-gray-300"></div>
                        </td>
                        <td class="py-2 px-4">
                          <div class="h-8 w-28 bg-gray-300"></div>
                        </td>
                        <td class="py-2 px-4">
                          <div class="h-8 w-36 bg-gray-300"></div>
                        </td>
                        <td class="py-2 px-4">
                          <div class="h-8 w-12 bg-gray-300"></div>
                        </td>
                        <td class="py-2 px-4">
                          <div class="h-8 w-32 bg-gray-300"></div>
                        </td>
                        <td>
                        </td>
                      </tr>
                    {{else}}
                      {{#each this.invoices as |row|}}
                        <tr>
                          <td class="px-2 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            {{format-invoice-number row.number}}
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <Fmt::Date @value={{row.invoiceDate}} />
                          </td>
                          <td class="px-6 py-4 text-sm font-medium text-gray-900">
                            <div class="flex">
                              {{#if row.building}}
                                {{svg-jar "heroicons-md-office-building" class="mr-1 flex-none h-5 w-5 text-gray-400"}}
                                <div class="space-y-1">
                                  {{#if row.building.printName}}
                                    <div>
                                      {{row.building.printName}}
                                    </div>
                                  {{else}}
                                    <div class="text-gray-400 italic font-normal">
                                      Naamloos
                                    </div>
                                  {{/if}}
                                  <div class="text-gray-400 text-xs"><Fmt::CustomerName @model={{row.customer}} /></div>
                                </div>
                              {{else}}
                                {{#if row.customer}}
                                  {{svg-jar "heroicons-md-user" class="mr-1 flex-none h-5 w-5 text-gray-400"}}
                                  <Fmt::CustomerName @model={{row.customer}} />
                                {{else}}
                                  {{svg-jar "heroicons-md-code" class="mr-2 flex-none h-5 w-5 text-gray-400"}}
                                  <span class="text-gray-400 italic">Geen klant gekoppeld</span>
                                {{/if}}
                              {{/if}}
                            </div>
                          </td>
                          <td class="px-6 py-4 text-sm text-gray-500">
                            {{if row.building row.building.address1 row.customer.address1}}
                          </td>
                          <td class="px-6 py-4 text-sm text-gray-500">
                            {{if row.building row.building.postalCode row.customer.postalCode}}
                          </td>
                          <td class="px-6 py-4 text-sm text-gray-500">
                            {{if row.building row.building.city row.customer.city}}
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <button type="button"
                              onClick={{fn @onRecycle row}}
                            class="text-red-700 hover:text-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
                              Hergebruik
                            </button>
                          </td>
                        </tr>
                    {{else}}
                        <tr>
                          <td colspan="10" class="px-6 py-4 text-center text-sm text-gray-500">
                            Geen oude facturen met BTW-attest gevonden
                          </td>
                        </tr>
                      {{/each}}
                    {{/if}}
                  </tbody>
                </table>
              </div>
            </div>
            <DataTable::Pagination
              @page={{this.page}}
              @size={{this.size}}
              @total={{this.invoices.meta.count}}
              @onPrevious={{this.previousPage}}
              @onNext={{this.nextPage}}
              @onSelectPage={{this.selectPage}} />
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>
