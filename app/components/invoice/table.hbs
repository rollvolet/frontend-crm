<div class="px-4 py-5 border-b border-gray-200 sm:px-6">
  <h3 class="text-lg leading-6 font-medium text-gray-900">
    Facturen
  </h3>
</div>
<div class="px-4 space-y-6">
  <div class="-my-2 overflow-x-auto sm:-mx-6">
    <div class="py-2 align-middle inline-block min-w-full sm:px-2">
      <div class="overflow-hidden border-b border-gray-200">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <DataTable::Th
                @field="number"
                @currentSort={{this.sort}}
                @onUpdateSort={{fn (mut this.sort)}}
                class="px-6 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                Nr.
              </DataTable::Th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Dossier
              </th>
              <DataTable::Th
                @field="invoice-date"
                @currentSort={{this.sort}}
                @onUpdateSort={{fn (mut this.sort)}}
                class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Datum
              </DataTable::Th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Naam
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Adres
              </th>
              <th class="px-6 py-3 bg-gray-50 rounded-tr-lg"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {{#if this.loadData.isRunning}}
              <tr class="animate-pulse">
                <td class="py-2 px-4">
                  <div class="h-8 w-12 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-16 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-14 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-28 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-36 bg-gray-300"></div>
                </td>
                <td>
                </td>
              </tr>
              <tr class="animate-pulse">
                <td class="py-2 px-4">
                  <div class="h-8 w-12 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-16 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-16 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-36 bg-gray-300"></div>
                </td>
                <td class="py-2 px-4">
                  <div class="h-8 w-48 bg-gray-300"></div>
                </td>
                <td>
                </td>
              </tr>
            {{else}}
              {{#each this.invoices as |row|}}
                <tr>
                  <td class="px-2 py-4 text-sm text-gray-500">
                    <div class="flex items-center space-x-1">
                      <Invoice::PaymentStatusIcon @isPaid={{row.paymentDate}} />
                      <span>{{format-invoice-number row.number}}</span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {{format-case-number row.case.identifier}}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <Fmt::Date @value={{row.invoiceDate}} />
                  </td>
                  <td class="px-6 py-4 text-sm font-medium text-gray-900">
                    <Fmt::CustomerAndBuildingName @case={{row.case}} />
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <Address::DetailView @model={{or row.building.address row.customer.address}} />
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <LinkTo @route="main.invoices.edit" @model={{row.id}}
                      class="text-red-700 hover:text-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
                      Bekijk
                    </LinkTo>
                  </td>
                </tr>
            {{else}}
                <tr>
                  <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
                    Geen facturen gevonden.
                  </td>
                </tr>
              {{/each}}
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <DataTable::Pagination
    @page={{this.page}}
    @size={{this.size}}
    @total={{this.invoices.meta.count}}
    @onPrevious={{this.previousPage}}
    @onNext={{this.nextPage}}
    @onSelectPage={{this.selectPage}} />
</div>