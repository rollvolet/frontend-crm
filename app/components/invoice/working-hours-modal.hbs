<div class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    {{#if this.showModalContent}}
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        {{css-transition
            enterClass="opacity-0"
            enterActiveClass="ease-out duration-300"
            enterToClass="opacity-100"
            leaveClass="opacity-100"
            leaveActiveClass="ease-in duration-200"
            leaveToClass="opacity-0"}}
        aria-hidden="true"></div>
    {{/if}}

    {{!-- This element is to trick the browser into centering the modal contents. --}}
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    {{#if this.showModalContent}}
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
        {{css-transition
            enterClass="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            enterActiveClass="ease-out duration-300"
            enterToClass="opacity-100 translate-y-0 sm:scale-100"
            leaveClass="opacity-100 translate-y-0 sm:scale-100"
            leaveActiveClass="ease-in duration-200"
            leaveToClass="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"}}>
        <div class="hidden sm:block absolute top-0 right-0 pt-4 pr-4">
          <button type="button"
            onClick={{this.closeModal}}
          class="bg-white rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
            <span class="sr-only">Close</span>
            {{svg-jar "heroicons-md-x" class="h-6 w-6"}}
          </button>
        </div>
        <div class="space-y-4">
          <div class="flex justify-between items-start">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold font-display text-gray-900">
                Werkuren
              </h2>
            </div>
          </div>
          <div class="-my-2 overflow-x-auto">
            <div class="py-2 align-middle inline-block min-w-full">
              <div class="overflow-hidden border-b border-gray-200">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead>
                    <th class="pl-4 pr-2 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Datum
                    </th>
                    <th class="pl-4 pr-2 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Technieker
                    </th>
                    <th class="pl-4 pr-2 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                      {{!-- buttons --}}
                    </th>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    {{#each this.sortedWorkingHours as |workingHour|}}
                      <tr>
                        <td class="px-2 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                          <Fmt::Date @value={{workingHour.date}} />
                        </td>
                        <td class="px-2 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                          {{workingHour.employee.firstName}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                          <button type="button"
                            onClick={{perform this.deleteWorkingHour workingHour}}
                            class="text-red-700 hover:text-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
                            Verwijder
                          </button>
                        </td>
                      </tr>
                    {{else}}
                      <tr>
                        <td colspan="3" class="px-2 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                          Nog geen werkuren geregistreerd
                        </td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-3 sm:max-w-lg items-start">
            <div>
              <InputField::Date
                @label="Datum"
                @value={{this.newWorkingHourDate}}
                @onChange={{fn (mut this.newWorkingHourDate)}}
                class="mt-1" />
            </div>
            <div>
              <InputField::EmployeeSelect
                @label="Technieker"
                @value={{this.newWorkingHourTechnician}}
                @isOnRoad={{true}}
                @isTechnician={{true}}
                @isAdministrative={{true}}
                @sort={{array "functionSort:desc"}}
                @onSelectionChange={{fn (mut this.newWorkingHourTechnician)}}
                class="mt-1" />
            </div>
            <div class="sm:mt-6">
              {{#if this.isDisabledAddWorkingHour}}
                <button type="button" disabled
                  class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-gray-700 bg-gray-100">
                  Toevoegen
                </button>
              {{else}}
                <button type="button"
                  class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                  onClick={{perform this.addWorkingHour}}>
                  Toevoegen
                </button>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>
