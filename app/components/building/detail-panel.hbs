<div class="mb-4 flex divide-x divide-gray-200">
  <div class="pl-1 shrink-0 grow-0 flex flex-col items-center {{unless this.editMode "justify-between"}}">
    {{#if this.editMode}}
      <Util::SaveStatus @model={{@model}} @task={{this.save}} />
      <button type="button"
        {{on "click" this.closeEdit}}
        class="p-2 text-gray-400 hover:text-red-400 focus:text-red-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
        {{svg-jar "logout-box-line" class="h-5 w-5 fill-current"}}
        <EmberTooltip @text="Sluiten" />
      </button>
    {{else}}
      <button type="button"
        {{on "click" @onCloseDetail}}
        class="p-2 text-gray-400 hover:text-red-400 focus:text-red-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
        {{svg-jar "arrow-left-s-line" class="h-5 w-5 fill-current"}}
        <EmberTooltip @text="Terug" />
      </button>
      <div class="flex flex-col items-center space-y-2">
        {{#if this.isEnabledDelete}}
          <button type="button"
            {{on "click" @onDelete}}
            class="text-gray-400 hover:text-red-400 focus:text-red-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
            {{svg-jar "delete-bin-line" class="h-5 w-5 fill-current"}}
          </button>
        {{/if}}
        <button type="button"
          {{on "click" this.openEdit}}
          class="p-2 text-gray-400 hover:text-red-400 focus:text-red-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
          {{svg-jar "pencil-line" class="h-5 w-5 fill-current"}}
        </button>
      </div>
    {{/if}}
  </div>
  <div>
    {{#if this.editMode}}
      <div class="mx-8 my-2">
        <CustomerEntity::Form
          @model={{@model}}
          @scope="building"
          @onSave={{perform this.save}} />
      </div>
    {{else}}
      <h2 class="mx-4 text-xl font-bold font-display text-gray-900">
        <span class="text-gray-400 mr-1">{{@model.number}}</span>
        <Fmt::CustomerName @model={{@model}} />
      </h2>
      <div class="m-4">
        <CustomerEntity::Detail
          @model={{@model}}
          @scope="building" />
      </div>
    {{/if}}
  </div>
</div>