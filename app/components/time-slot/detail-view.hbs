<div class="p-4 bg-gray-100 rounded-lg
  {{unless this.isScheduled "relative border-2 border-dashed border-red-400"}}">
  {{#unless this.isScheduled}}
    <div class="absolute -bottom-3 -right-3 rounded shadow px-2 py-1 bg-red-400 text-white text-xs">
      Nog niet ingepland
    </div>
  {{/unless}}
  <div class="space-y-3">
    <div class="flex justify-between items-center">
      <div class="flex flex-row items-center">
        <div class="flex-none">
          {{svg-jar "calendar-event-line" class="h-5 w-5 text-gray-500 fill-current"}}
        </div>
        <div class="ml-3 text-lg font-semibold text-gray-600">
          {{capitalize @title}}
        </div>
      </div>
      <div>
        <Rlv::Button
          @label="Open agenda"
          @hideText={{true}}
          @icon="external-link-line"
          @skin="secondary-naked"
          @size="large"
          @route="main.calendar.visits"
          @query={{hash d=(format-date @date "yyyy-MM-dd")}}
          class="p-0" />
      </div>
    </div>
    <dl class="-ml-12 space-y-1 text-sm">
      <Util::DetailItem @label="Datum">
        <Fmt::Date @value={{@date}} />
      </Util::DetailItem>
      <Util::DetailItem @label="Periode">
        {{@period}}
      </Util::DetailItem>
      {{#if this.isScheduled}}
        <Util::DetailItem @label="Agenda">
          Ingepland van
          <Fmt::DateTime @value={{@model.start}} @format="HH:mm" />
          tot
          <Fmt::DateTime @value={{@model.end}} @format="HH:mm" />
        </Util::DetailItem>
      {{/if}}
    </dl>
  </div>
</div>
