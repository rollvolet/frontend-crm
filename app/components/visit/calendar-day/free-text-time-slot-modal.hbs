<Rlv::Modal
  @title={{if @model.isNew "Voeg afspraak toe" "Bewerk afspraak"}}
  @width="sm:w-[42rem] sm:max-w-2xl"
  @onClose={{@onClose}}>
  <:body>
    <div class="space-y-4">
      <div>
        <label for="timeslot-title" class="block text-sm font-medium text-gray-700">
          Titel
        </label>
        <Input
          id="timeslot-title"
          @type="text"
          @value={{@model.title}}
          class="mt-1 focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md" />
      </div>
      <div>
        <label for="description" class="block text-sm font-medium text-gray-700">
          Beschrijving
        </label>
        <Textarea
          id="description"
          @value={{@model.description}}
          class="mt-1 focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md disabled:bg-gray-100"
          rows="5" />
      </div>
    </div>
  </:body>
  <:footer>
    <Rlv::Button
      @label={{if @model.isNew "Toevoegen" "Opslaan"}}
      @disabled={{not @model.title}}
      @skin="primary"
      {{on "click" (fn @onSave @model)}}/>
  </:footer>
</Rlv::Modal>
