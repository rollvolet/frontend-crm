<div class="flex items-center space-x-2">
  <h2 class="text-lg leading-6 font-medium text-gray-900">
    Te maken productiebons laatste jaar
  </h2>
  <LinkTo @route="main.orders.index"
    class="text-gray-400 hover:text-red-400 focus:text-red-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
    {{svg-jar "external-link-line" class="h-5 w-5 fill-current"}}
    <EmberTooltip @text="Ga naar bestellingen" @side="top" />
  </LinkTo>
</div>
<div class="flex flex-col mt-2" {{did-update (perform this.loadData) @employee}}>
  <div class="bg-white overflow-hidden shadow sm:rounded-lg">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="border-b border-gray-200 max-h-128 overflow-y-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="sticky top-0">
              <tr>
                <th class="pl-4 pr-2 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-lg">
                  AD
                </th>
                <th class="px-3 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Datum
                </th>
                <th class="px-3 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Naam
                </th>
                <th class="px-3 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Adres
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {{#if this.loadData.isRunning}}
                <tr class="animate-pulse">
                  <td class="py-2 px-4">
                    <div class="h-8 w-12 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-16 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-28 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-36 bg-gray-300"></div>
                  </td>
                </tr>
                <tr class="animate-pulse">
                  <td class="py-2 px-4">
                    <div class="h-8 w-12 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-16 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-36 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-48 bg-gray-300"></div>
                  </td>
                </tr>
              {{else}}
                {{#each this.orders as |row|}}
                  <tr role="button" {{on "click" (fn this.navigateToDetail row)}}>
                    <td class="px-2 py-2 whitespace-nowrap text-center text-xs text-gray-500">
                      <LinkTo @route="main.orders.edit" @model={{row.id}}
                        class="underline hover:text-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
                        AD{{format-request-number row.case.request.number}}
                      </LinkTo>
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap text-xs text-gray-900">
                      <Fmt::Date @value={{row.orderDate}} />
                    </td>
                    {{#let row.case as |case|}}
                      <td class="px-3 py-2 text-xs font-medium text-gray-900">
                        <Fmt::CustomerAndBuildingName @case={{case}} />
                      </td>
                      <td class="px-3 py-2 text-xs text-gray-500">
                        {{#let (or case.building.address case.customer.address) as |address|}}
                          <span class="whitespace-pre-wrap">{{address.street}}</span><br>
                          {{address.postalCode}} {{address.city}}
                        {{/let}}
                      </td>
                    {{/let}}
                  </tr>
              {{else}}
                  <tr>
                    <td colspan="4" class="px-6 py-4 text-center text-xs text-gray-500">
                      Geen bestellingen zonder productiebon gevonden.
                    </td>
                  </tr>
                {{/each}}
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    {{#if this.orders}}
      <DataTable::Pagination
        @textSize="small"
        @page={{this.page}}
        @size={{this.size}}
        @total={{this.orders.meta.count}}
        @onPrevious={{this.previousPage}}
        @onNext={{this.nextPage}}
        @onSelectPage={{this.selectPage}} />
    {{/if}}
  </div>
</div>