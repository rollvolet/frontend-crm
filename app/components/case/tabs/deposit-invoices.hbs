{{#if @model.request}}
  <li class="relative overflow-hidden lg:flex-1">
    {{#if @model.order}}
      {{#if @model.isCancelled}}
        <Case::Tabs::Placeholder @label="Voorschotfacturen" />
      {{else}}
        <div class="overflow-hidden border border-gray-200 lg:border-0">
          <LinkTo @route="main.case.order.edit.deposit-invoices"
            @models={{array @model.id @model.order.id}}
            class="group" aria-current="step">
            <span class="absolute left-0 top-0 h-full w-1 {{if (eq @selectedStep "deposit-invoices") "bg-red-600" "bg-transparant group-hover:bg-gray-200"}} lg:bottom-0 lg:top-auto lg:h-1 lg:w-full" aria-hidden="true"></span>
            <span class="flex items-start px-6 py-5 text-sm lg:pl-9">
              <span class="flex-shrink-0">
                <Case::Tabs::StepIcon @step={{if @model.invoice "done" "ongoing-sibling"}} />
              </span>
              <span class="ml-4 mt-0.5 flex min-w-0 flex-col">
                <span class="text-sm font-medium">Voorschotfacturen</span>
                <span class="flex space-x-2 items-center">
                  <span class="text-xs text-gray-500">
                    {{#if @model.depositInvoices.length}}
                      {{#if (eq @model.depositInvoices.length 1)}}
                        {{@model.depositInvoices.length}} factuur gemaakt
                      {{else}}
                        {{@model.depositInvoices.length}} facturen gemaakt
                      {{/if}}
                    {{else}}
                      Nog geen facturen
                    {{/if}}
                  </span>
                </span>
              </span>
            </span>
          </LinkTo>
        </div>
        <Case::Tabs::Separator />
      {{/if}}
    {{else}}
      <Case::Tabs::Placeholder @label="Voorschotfacturen" />
    {{/if}}
  </li>
{{/if}}