{{#if @label}}
  <label for={{this.fieldId}} class="{{if @hideLabel "sr-only"}} block text-sm font-medium text-gray-700">
    {{@label}}
  </label>
{{/if}}
<div class="{{if @leading "relative shadow-sm rounded-md"}}">
  {{#if @leading}}
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <span class="text-gray-500 sm:text-sm">
        {{@leading}}
      </span>
    </div>
  {{/if}}

  <Input ...attributes
    id={{this.fieldId}}
    @value={{this.formattedValue}}
    {{on "focusout" (fn this.updateValue this.formattedValue)}} />
</div>
{{#each @errors as |error|}}
  <p class="mt-2 text-xs text-red-600">
    {{error.message}}
  </p>
{{/each}}
