{{#if @model}}
  <div class="p-4 bg-gray-100 rounded-lg">
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <div class="flex flex-row items-center">
          <div class="flex-none">
            {{svg-jar "heroicons-md-calendar" class="h-5 w-5 text-gray-500"}}
          </div>
          <div class="ml-3 text-lg font-semibold text-gray-600">
            Bezoek
          </div>
          <Util::SaveStatus @model={{@model}} @task={{@saveTask}} class="ml-2" />
        </div>
      </div>
      <div>
        <div class="grid grid-cols-2 gap-y-6 gap-x-4">
          <div class="col-span-2">
            <InputField::Date
              @label="Datum"
              @value={{@model.visitDate}}
              @onChange={{queue (fn (mut @model.visitDate)) (perform @saveTask)}} />
          </div>
          <div class="col-span-2">
            <InputField::CalendarPeriodSelect
              @label="Periode"
              @value={{@model.period}}
              @required={{true}}
              @onSelectionChange={{this.changePeriod}} />
          </div>
          {{#if this.requiresSingleTime}}
            <div>
              <label for="period-from" class="block text-sm font-medium text-gray-700">
                Tijdstip
              </label>
              <Input
                id="period-from"
                @type="text"
                @value={{@model.fromHour}}
                class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                {{on "focusout" (perform @saveTask)}} />
            </div>
          {{/if}}
          {{#if this.requiresTimeRange}}
            <div>
              <label for="period-from" class="block text-sm font-medium text-gray-700">
                Van
              </label>
              <Input
                id="period-from"
                @type="text"
                @value={{@model.fromHour}}
                class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                {{on "focusout" (perform @saveTask)}} />
            </div>
            <div>
              <label for="period-to" class="block text-sm font-medium text-gray-700">
                Tot
              </label>
              <Input
                id="period-to"
                @type="text"
                @value={{@model.untilHour}}
                class="shadow-sm focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md"
                {{on "focusout" (perform @saveTask)}} />
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="p-4 bg-gray-100 rounded-lg">
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <div class="flex flex-row items-center">
          <div class="flex-none">
            {{svg-jar "heroicons-md-calendar" class="h-5 w-5 text-gray-500"}}
          </div>
          <div class="ml-3 text-lg font-semibold text-gray-600">
            Bezoek
          </div>
        </div>
      </div>
      <div class="pl-8 italic text-gray-400">
        Bezoek niet correct aangemaakt. Vink 'Bezoek nodig' opnieuw aan.
      </div>
    </div>
  </div>
{{/if}}
