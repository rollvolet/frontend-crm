<div class="rounded-md bg-blue-50 p-4" ...attributes>
  <div class="flex">
    <div class="flex-shrink-0">
      {{svg-jar "heroicons-sm-information-circle" class="h-5 w-5 text-blue-400"}}
    </div>
    <div class="ml-3">
      {{#if hasBlock}}
        {{yield}}
      {{else}}
        {{#if @title}}
          <h3 class="text-sm font-medium text-blue-800">
            {{@title}}
          </h3>
        {{/if}}
        {{#if @message}}
          <div class="{{if @title "mt-2"}} text-sm text-blue-700">
            {{@message}}
          </div>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>