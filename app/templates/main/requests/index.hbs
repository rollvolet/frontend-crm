<div class="flex items-center justify-between">
  <div class="flex-1 min-w-0">
    <h2 class="text-2xl font-bold leading-7 font-display text-gray-900 sm:text-3xl sm:truncate">
      Aanvragen
    </h2>
  </div>
  <div class="flex grow-0">
    <LinkTo @route="main.requests.new"
      class="ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
      {{svg-jar "add-line" class="-ml-1 mr-2 h-5 w-5 fill-current"}}
      Nieuw
    </LinkTo>
  </div>
</div>

<div class="mt-6 bg-white shadow rounded-lg">
  <Request::DataTableFilter
    @number={{this.number}}
    @visitor={{this.visitor}}
    @reference={{this.reference}}
    @name={{this.name}}
    @street={{this.street}}
    @postalCode={{this.postalCode}}
    @city={{this.city}}
    @telephone={{this.telephone}}
    @isCancelled={{this.isCancelled}}
    @hasOffer={{this.hasOffer}}
    @resultCount={{this.model.meta.count}}
    @onChange={{this.applyFilter}} />
</div>

<div class="mt-6 bg-white shadow rounded-lg">
  <div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden border-b border-gray-200">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <DataTable::Th
                  @field="number"
                  @currentSort={{this.sort}}
                  @onUpdateSort={{fn (mut this.sort)}}
                  class="pl-4 pr-2 py-3 bg-gray-200 text-center text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-lg">
                  AD
                </DataTable::Th>
                <DataTable::Th
                  @field="requestDate"
                  @currentSort={{this.sort}}
                  @onUpdateSort={{fn (mut this.sort)}}
                  class="px-6 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Datum
                </DataTable::Th>
                <DataTable::Th
                  @field="visitorName"
                  @currentSort={{this.sort}}
                  @onUpdateSort={{fn (mut this.sort)}}
                  class="px-6 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Bezoek
                </DataTable::Th>
                <DataTable::Th
                  @field="reference"
                  @currentSort={{this.sort}}
                  @onUpdateSort={{fn (mut this.sort)}}
                  class="px-6 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Ref.
                </DataTable::Th>
                <th class="px-6 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Naam
                </th>
                <th class="px-6 py-3 bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Adres
                </th>
                <th class="px-6 py-3 bg-gray-200 rounded-tr-lg"></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {{#if this.isLoadingModel}}
                <tr class="animate-pulse">
                  <td class="py-2 px-4">
                    <div class="h-8 w-12 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-16 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-12 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-14 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-28 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-32 bg-gray-300"></div>
                  </td>
                  <td>
                  </td>
                </tr>
                <tr class="animate-pulse">
                  <td class="py-2 px-4">
                    <div class="h-8 w-12 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-16 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-12 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-16 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-36 bg-gray-300"></div>
                  </td>
                  <td class="py-2 px-4">
                    <div class="h-8 w-24 bg-gray-300"></div>
                  </td>
                  <td>
                  </td>
                </tr>
              {{else}}
                {{#each this.model as |row|}}
                  <tr role="button" {{on "click" (fn this.navigateToDetail row)}}>
                    <td class="px-2 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                      {{format-case-number row.case.identifier showPrefix=false}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <Fmt::Date @value={{row.requestDate}} />
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                      {{row.visitorName}}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                      {{row.reference}}
                    </td>
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <Fmt::CustomerAndBuildingName
                        @case={{hash customer=row.customer building=row.building}} />
                    </td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                      <Address::DetailView @model={{or row.building row.customer}} />
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <LinkTo @route="main.case.request.edit.index" @models={{array row.case.uuid row.uuid}}
                        class="text-red-700 hover:text-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
                        Bekijk
                      </LinkTo>
                    </td>
                  </tr>
                {{else}}
                  <tr>
                    <td colspan="7" class="px-6 py-4 text-center text-sm text-gray-500">
                      Geen aanvragen gevonden.
                    </td>
                  </tr>
                {{/each}}
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <DataTable::Pagination
    @page={{this.page}}
    @size={{this.size}}
    @total={{this.model.meta.count}}
    @onPrevious={{this.previousPage}}
    @onNext={{this.nextPage}}
    @onSelectPage={{this.selectPage}} />
</div>

{{outlet}}