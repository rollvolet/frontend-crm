<Rlv::Modal @width="max-w-5xl" @onClose={{this.cancel}}>
  <:body>
  <div class="space-y-4">
    <div class="flex justify-between items-start">
      <div class="space-y-2">
        <h2 class="text-2xl font-bold font-display text-gray-900">
          Gebruiker {{#if @model.isNew}}aanmaken{{else}}bewerken{{/if}}
        </h2>
      </div>
    </div>
    <form {{on "submit" this.save}} class="space-y-6">
      <div class="pt-6 sm:pt-5 grid grid-cols-1 gap-6 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <label for="first-name" class="block text-sm font-medium text-gray-700">
            Voornaam
          </label>
          <Input
            id="first-name"
            @type="text"
            @value={{@model.firstName}}
            class="mt-1 focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md" />
        </div>
        <div class="sm:col-span-2">
          <label for="last-name" class="block text-sm font-medium text-gray-700">
            Achternaam
          </label>
          <Input
            id="last-name"
            @type="text"
            @value={{@model.lastName}}
            class="mt-1 focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md" />
        </div>
        <div>
          <label for="initials" class="block text-sm font-medium text-gray-700">
            Initialen
          </label>
          <Input
            id="initials"
            @type="text"
            @value={{@model.initials}}
            class="mt-1 focus:ring-red-200 focus:border-red-200 block w-full sm:text-sm border-gray-300 rounded-md" />
        </div>
        <div class="sm:col-span-2">
          <InputField::EmployeeTypeSelect
            @label="Rol"
            @value={{this.employeeType}}
            @onSelectionChange={{this.selectType}}
            class="mt-1" />
        </div>
      </div>
      <div class="border-t border-gray-200 pt-6 sm:pt-5 grid grid-cols-1 gap-6 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <InputField::AccountSelect
            @label="Microsoft account"
            @value={{this.account}}
            @onSelectionChange={{this.selectAccount}}
            class="mt-1" />
        </div>
        {{#if @model.user}}
          <div class="sm:col-span-4">
            <InputField::UserGroupsSelect
              @label="Groepen"
              @value={{this.userGroups}}
              @onSelectionChange={{this.setUserGroups}}
              class="mt-1" />
          </div>
        {{/if}}
      </div>

      <div class="pt-6 sm:pt-5 flex items-center {{if @model.isNew "justify-end" "justify-between"}}">
        {{#unless @model.isNew}}
          <button type="button"
            {{on "click" this.terminateEmployee}}
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
            {{svg-jar "delete-bin-line" class="-ml-1 mr-2 h-5 w-5 fill-current"}}
            Buiten dienst stellen
          </button>
        {{/unless}}
        <button type="submit"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          Opslaan
        </button>
      </div>
    </form>
  </div>
  </:body>
</Rlv::Modal>