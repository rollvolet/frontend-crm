{{#if @label}}
  <label for="telephone-prefix-select" class="block text-sm font-medium text-gray-700">
    {{@label}}
  </label>
{{/if}}
<div class="mt-1" ...attributes>
  <PowerSelect
    @placeholder={{this.placeholder}}
    @searchPlaceholder="Typ om te zoeken"
    @options={{this.options}}
    @selected={{@value}}
    @searchEnabled={{true}}
    @searchField="telephonePrefix"
    @onChange={{@onSelectionChange}}
    @noMatchesMessage="Geen resultaten"
    @allowClear={{true}} as |option select|
  >
    {{highlight-substr option.telephonePrefix select.lastSearchedText}}
  </PowerSelect>
</div>
