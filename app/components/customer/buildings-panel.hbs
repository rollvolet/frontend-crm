<div {{did-update this.closeDetail @customer}}>
  {{#if this.selectedBuilding}}
    <Building::DetailPanel
      @model={{this.selectedBuilding}}
      @initialEditMode={{this.isNewBuilding}}
      @onCloseDetail={{this.closeDetail}}
      @onDelete={{perform this.deleteBuilding}} />
  {{else}}
    <Customer::BuildingsTable
      @customer={{@customer}}
      @onOpenDetail={{this.openDetail}}
      @onCreateNew={{this.openCreate}} />
  {{/if}}
</div>