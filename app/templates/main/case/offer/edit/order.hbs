<div class="bg-white shadow rounded-lg overflow-hidden">
  <div class="divide-y divide-y-200">
    {{!-- Card header --}}
    <div class="px-6 pt-6 pb-4">
      <div class="flex justify-between items-center">
        <div>
          <h2 class="text-2xl font-bold font-display text-gray-900">
            Bestelling maken voor AD{{this.offer.requestNumber}} {{this.visitor.initials}}
          </h2>
          <p class="text-sm text-gray-400">
            Selecteer de producten om toe te voegen aan de bestelling
          </p>
        </div>
      </div>
    </div>
  </div>

  {{!-- Card content --}}
  <div class="px-6 py-4 space-y-6">
    {{#if (or this.updateOfferVatRate.isRunning this.createOrder.isRunning)}}
      <div class="h-32">
        <LoadingSpinner @label="Bestelling aanmaken..." />
      </div>
    {{else}}
      {{#if this.hasMixedVatRates}}
        <div class="">
          <AlertMessage::Warning
            @message="De geselecteerde lijnen bevatten verschillende BTW tarieven. Hier kan geen bestelling voor opgesteld worden."
            class="shadow" />
        </div>
      {{/if}}
      {{#if @model.length}}
        <ul class="space-y-2">
          {{#each @model as |offerline|}}
            <li class="px-4 sm:py-6 sm:px-6 flex justify-between border rounded-md {{if offerline.isOrdered "text-red-600 border-red-300 bg-red-50" "text-gray-500 border-gray-200"}}"
              {{on "click" (toggle "isOrdered" offerline)}}>
              <div class="flex space-x-4 items-start">
                <div>
                  <input
                    type="checkbox"
                    checked={{offerline.isOrdered}}
                    class="focus:ring-red-500 h-4 w-4 text-red-600 border-gray-300 rounded" />
                </div>
                <div>
                  {{{offerline.description}}}
                </div>
              </div>
              <div class="text-right">
                <div class="font-medium">
                  <FmtCurrency @value={{offerline.amount}} />
                </div>
                <div class="text-sm">
                  + {{offerline.vatRate.rate}}% btw
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
        <div class="px-2 flex justify-end space-x-4 items-baseline">
          <div class="font-medium text-gray-500">
            Totaal
          </div>
          <div class="text-lg font-medium text-red-600">
            <FmtCurrency @value={{this.orderedAmount}} /> + BTW
          </div>
        </div>
        <div class=" px-2 flex justify-end space-x-2">
          <button type="button"
            onClick={{this.cancel}}
            class="ml-3 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm text-gray-500 hover:text-red-400 hover:border-red-300 focus:border-red-300 focus:text-red-400 focus:outline-none focus:ring-2 focus:ring-red-200">
            Annuleren
          </button>
          {{#if this.isDisabledCreate}}
            <button type="button"
              disabled="disabled"
              class="ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-gray-400 bg-gray-100">
              Ga verder
              {{svg-jar "heroicons-md-chevron-right" class="ml-2 -mr-1 h-5 w-5"}}
            </button>
          {{else}}
            <button type="button"
              onClick={{perform this.createOrder}}
              class="ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-200">
              Ga verder
              {{svg-jar "heroicons-md-chevron-right" class="ml-2 -mr-1 h-5 w-5"}}
            </button>
          {{/if}}
        </div>
      {{else}}
        <p class="text-gray-400 italic">
          Er zijn nog geen producten toegevoegd aan de offerte. Voeg producten toe alvorens u een bestelling kan opstellen.
        </p>
      {{/if}}
    {{/if}}
  </div>
</div>

{{#if this.showIncompatibleVatRatesDialog}}
  <PaperDialog @class="flex-50" @onClose={{fn this.closeIncompatibleVatRatesDialog}} @clickOutsideToClose={{true}} @parent=".main-outlet" @origin=".main-outlet">
    <PaperToolbar>
      <PaperToolbarTools>
        <h2>Opgelet</h2><span class="flex"></span>
        <PaperButton @iconButton={{true}} @onClick={{fn this.closeIncompatibleVatRatesDialog}}>
          <PaperIcon @icon="close" />
        </PaperButton>
      </PaperToolbarTools>
    </PaperToolbar>

    <PaperDialogContent>
      <p>
        Het BTW-tarief van de offerte is {{this.offer.vatRate.rate}}% terwijl de geselecteerde lijnen BTW-tarief {{this.orderedVatRate.rate}}% hebben.
      </p>
      <p>
        Mag het BTW-tarief van de offerte aangepast worden naar {{this.orderedVatRate.rate}}%?
      </p>
    </PaperDialogContent>

    <PaperDialogActions @class="layout-row">
      <span class="flex"></span>
      <PaperButton @onClick={{fn this.closeIncompatibleVatRatesDialog}}>Terug</PaperButton>
      <PaperButton @onClick={{perform this.updateOfferVatRate}}>Pas BTW-tarief aan</PaperButton>
    </PaperDialogActions>
  </PaperDialog>
{{/if}}
