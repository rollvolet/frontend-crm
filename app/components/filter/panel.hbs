<div class="p-4 lg:px-6 space-y-4 w-full lg:flex lg:items-start lg:justify-between lg:gap-6 lg:space-y-0 bg-gray-50 rounded">
  <button class="flex items-center justify-between {{if this.isCollapsed "w-full"}} focus:outline-none focus:ring-2 focus:ring-red-200" type="button" {{on "click" (toggle "isCollapsed" this)}}>
    <span class="flex items-center">
      {{svg-jar "search-line" class="shrink-0 mr-2 h-4 w-4 text-gray-400 fill-current"}}
      <h4 class="text-gray-700 text-sm uppercase tracking-wide">
        {{or @title "Zoeken"}}
      </h4>
    </span>
    {{#if this.isCollapsed}}
      {{svg-jar "arrow-down-s-line" class="h-5 w-5 text-gray-400 fill-current"}}
    {{/if}}
  </button>
  {{#unless this.isCollapsed}}
    {{yield (hash TextInput=(component "filter/text-input"))}}
    <div class="shrink-0">
      {{#if @onReset}}
        <Rlv::Button
          @label="Wis filters"
          @icon="filter-line"
          @skin="secondary-link"
          {{on "click" @onReset}} />
      {{/if}}
    </div>
  {{/unless}}
</div>
